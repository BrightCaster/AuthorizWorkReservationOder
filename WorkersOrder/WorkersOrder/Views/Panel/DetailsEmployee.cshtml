
@{

    int id = ViewBag.Id;
    int count = 0;
}

<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" type="text/css" href="~/css/Changes.css" />
</head>
<body>
    <main>

        <img src="~/image/solbegLogo.png" width="300" />
        <table>
            @{
                foreach (var item in Model)
                {
                    if (item.OrderID != id) continue;
                    count++;

                    <tr>
                        <td class="tds">
                            @item.DevicesID
                        </td>
                        <td class="tds">
                            @item.Discription
                        </td>

                    </tr>
                }
                if (count==0)
                {
                    <tr>
                        <td>The list of devices is still empty</td>
                    </tr>
                }


            }
        </table>
        
        <form>
            <table>
                <tr>
                    <td>
                        <input type="submit" class="button" name="Back" value="Back" />
                    </td>
                </tr>
            </table>
        </form>
    </main>
</body>
</html>