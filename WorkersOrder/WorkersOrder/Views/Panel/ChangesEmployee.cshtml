
@model WorkersOrder.Models.ViewModels.ReservationModel

<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" type="text/css" href="~/css/Changes.css" />
</head>
<body>
    <main>
        <form asp-action="ChangesEmployee" asp-controller="Panel">
            <img src="~/image/solbegLogo.png" width="300" />
            <table id="tabChanges">
                <tr>
                    <td>
                        <label asp-for="Status">Status</label>
                        <input type="number" min="1" max="2" value="1" asp-for="Status" />
                        <span asp-validation-for="Status"></span>
                    </td>
                </tr>
            </table>
            <table>
                <tr>
                    <td>
                        <input type="submit" class="button" name="Confrim" value="Confrim">
                    </td>
                </tr>
                <tr>
                    <td>
                        <input type="submit" class="button" name="Cancel" value="Cancel">
                    </td>
                </tr>
            </table>
            <div style="display:grid; align-items:end">
                <p align="left">*Status - Order status: "1": The order status is free; "2": The order status has been deleted.</p>
            </div>
        </form>
    </main>
</body>
</html>